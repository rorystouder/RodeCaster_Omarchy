# udev rules for Rodecaster Pro/Pro II
# Place in /etc/udev/rules.d/

# Rodecaster Pro II
SUBSYSTEM=="usb", ATTR{idVendor}=="19f7", ATTR{idProduct}=="0015", MODE="0666", GROUP="audio", TAG+="uaccess"

# Rodecaster Pro (original)
SUBSYSTEM=="usb", ATTR{idVendor}=="19f7", ATTR{idProduct}=="0016", MODE="0666", GROUP="audio", TAG+="uaccess"

# Rodecaster Pro alternative ID
SUBSYSTEM=="usb", ATTR{idVendor}=="19f7", ATTR{idProduct}=="0017", MODE="0666", GROUP="audio", TAG+="uaccess"

# Auto-run configuration when device is connected
ACTION=="add", SUBSYSTEM=="usb", ATTR{idVendor}=="19f7", ATTR{idProduct}=="001[567]", RUN+="/usr/local/bin/rodecaster-configure"